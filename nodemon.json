{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "src/**/*.spec.ts",
      "src/tests/**/*.ts"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node --require ts-node/register --require tsconfig-paths/register"
    },
    "watch": ["src/"],
    "env": { "NODE_ENV": "development" },
    "ext": "js,json,ts"
  }