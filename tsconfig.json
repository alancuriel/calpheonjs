{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@typings/*": ["typings/*"],
      "@helpers/*": ["helpers/*"],
      "@tests/*": ["tests/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./dist"]
}
